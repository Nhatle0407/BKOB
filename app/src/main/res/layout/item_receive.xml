<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_receive"
    android:id="@+id/item_recieve"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/avatar_receive"
        android:layout_width="68dp"
        android:layout_height="102dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/giaitich"
        android:contentDescription="TODO" />
    <RelativeLayout
        android:layout_toEndOf="@id/avatar_receive"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_receive1"
            style="@style/Title"
            android:textSize="16sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Giải tích 2"
            android:textColor="@color/header" />

        <TextView
            android:id="@+id/from_receive"
            style="@style/Title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_receive1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"

            android:ellipsize="end"
            android:maxLines="2"
            android:text="Từ: Nguyễn Khang"
            android:textColor="@color/header" />

        <TextView
            android:id="@+id/price_receive"
            style="@style/Price"
            android:textSize="16sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/from_receive"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/main"
            android:text="20.0000đ" />
    </RelativeLayout>
    <TextView
        android:id="@+id/date_receive"
        style="@style/Description"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:text="03/10/2000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/custom_text"
        android:id="@+id/detail_receive"
        style="@style/Title"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/detail"
        android:textColor="@color/main" />
</RelativeLayout>