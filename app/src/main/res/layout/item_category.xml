<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:background="@drawable/background_receive"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar_item_search"
        android:layout_width="59.6dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        android:src="@drawable/giaitich" />
    <TextView
        android:id="@+id/name_item_search"
        android:width="100dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        style="@style/Caption"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/avatar_item_search"
        android:text="Sách giáo trình"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>