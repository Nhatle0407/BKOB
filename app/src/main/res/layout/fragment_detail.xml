<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".views.fragments.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
        <ImageButton
            android:id="@+id/btn_back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#f8f8f8"
            android:contentDescription="TODO"
            android:src="@drawable/ic_akar_icons_arrow_left" />

        <TextView
            android:id="@+id/detail"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/detail"
            android:textColor="@color/header" />

    <ImageButton
        android:id="@+id/btn_cart_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#f8f8f8"
        android:contentDescription="TODO"
        android:src="@drawable/ic_akar_icons_cart" />

    <ImageView
        android:id="@+id/avatar_detail"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="TODO"
        android:src="@drawable/giaitich" />

    <TextView
        android:id="@+id/price"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="100.000đ"
        android:textColor="@color/main" />

    <TextView
        android:id="@+id/name_item_detail"
        style="@style/BoldBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Giải tích 2"
        android:textColor="@color/header" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/body"
            android:text="Mô tả: "
            android:id="@+id/mota"
            style="@style/BoldBody"
            android:layout_below="@+id/name_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/des_detail"
        style="@style/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mota"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="Với nhiều nội dung quan trọng như tích phân, lượng giác, đạo hàm, nội dung chi tiết rõ ràng giúp bạn qua môn dễ dàng hơn"
        android:textColor="@color/body" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/purchase"
        style="@style/ButtonSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/btn_addToCart"
        android:background="@drawable/button_secondary"
        android:padding="10dp"
        android:text="Mua ngay" />

    <Button
        android:id="@+id/btn_addToCart"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_main"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Thêm vào giỏ" />


</RelativeLayout>