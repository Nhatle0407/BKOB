<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_receive"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/im_book"
        android:layout_width="68dp"
        android:layout_height="102dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/giaitich"
        android:contentDescription="TODO" />
    <RelativeLayout
        android:layout_toEndOf="@id/im_book"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            style="@style/BoldBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Giải tích 2"
            android:textColor="@color/header" />

        <LinearLayout
            android:id="@+id/container_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_quantity"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:textColor="@color/body" />

            <TextView
                android:id="@+id/quantity"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/body" />

        </LinearLayout>

        <TextView
            android:id="@+id/price_receive"
            style="@style/BoldBody"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_quantity"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="20.0000đ" />
    </RelativeLayout>

</RelativeLayout>