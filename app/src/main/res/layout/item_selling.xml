<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:background="@drawable/background_receive"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="180dp"
    android:focusable="true">

    <ImageView
        android:id="@+id/avatar_item_selling"
        android:layout_width="59.6dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        android:src="@drawable/giaitich" />
    <TextView
        android:id="@+id/name_item_selling"
        android:layout_marginTop="10dp"
        android:textColor="@color/header"
        style="@style/Caption"
        android:layout_marginStart="10dp"
        android:layout_below="@id/avatar_item_selling"
        android:text="Giải tích 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/price_item_selling"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="20.000đ"
        style="@style/Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btn_remove_item_selling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f8f8f8"
        android:contentDescription="TODO"
        android:src="@drawable/ic_akar_icons_trash_can" />


</RelativeLayout>