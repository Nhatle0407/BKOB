<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BKOB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AppName">
        <item name="android:fontFamily">@font/sen_extrabold</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/header</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="BoldBody">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>