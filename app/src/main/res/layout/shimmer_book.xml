<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:background="@drawable/background_receive"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/avatar_item_search"
        android:layout_width="59.6dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        android:background="@color/gray" />
    <TextView
        android:id="@+id/name_item_search"
        android:layout_marginTop="10dp"
        android:textColor="@color/header"
        style="@style/Caption"
        android:layout_marginStart="10dp"
        android:layout_below="@id/avatar_item_search"
        android:background="@color/gray"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/quanty_item_search"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/name_item_search"
        android:background="@color/gray"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_item_search"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/quanty_item_search"
        android:background="@color/gray"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btn_cart_item_search"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:src="@drawable/ic_akar_icons_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO" />
</RelativeLayout>