<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".views.fragments.AddBookFragment">

    <ImageButton
        android:id="@+id/btn_back_add_book"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="#f8f8f8"
        android:src="@drawable/ic_akar_icons_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tv_addBook"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Đăng bán"
        android:textColor="@color/header" />

    <TextView
        android:id="@+id/tv_sellWhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BoldBody"
        android:text="Bạn muốn bán gì?"
        android:textColor="@color/header"
        android:layout_below="@id/tv_addBook"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:id="@+id/btn_bookImage"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_akar_icons_camera"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:background="@drawable/background_receive"
        android:layout_below="@id/tv_sellWhat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_bookName"
        style="@style/Body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_bookImage"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:hint="Tên sản phẩm"
        android:inputType="text"
        android:paddingHorizontal="10dp" />

    <EditText
        android:id="@+id/et_price"
        style="@style/Body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_bookName"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext"
        android:hint="Giá"
        android:inputType="number"
        android:paddingHorizontal="10dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_price"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:hint="Mô tả"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        style="@style/Body"
        android:background="@drawable/edittext"/>

    <Button
        android:id="@+id/btn_addBook"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_description"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_main"
        android:text="Đăng bán"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>