<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="#F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btn_back_detail"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="#f8f8f8"
            android:src="@drawable/ic_akar_icons_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/detail"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/detail"
            android:textColor="@color/header" />

        <ImageButton
            android:id="@+id/btn_cart_detail"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="#f8f8f8"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_akar_icons_cart"
            android:contentDescription="TODO" />

        <ImageView

            android:id="@+id/avatar"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:contentDescription="TODO"
            android:src="@drawable/giaitich" />

        <TextView
            android:id="@+id/price"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="100.000đ"
            android:textColor="@color/header" />

        <TextView
            android:layout_below="@id/price"
            android:id="@+id/name_item"
            style="@style/BoldBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Giải tích 2"
            android:textColor="@color/header" />
        <TextView
            android:layout_below="@id/name_item"
            android:layout_marginStart="20dp"
            android:id="@+id/quanty"
            android:textColor="@color/body"
            style="@style/Body"
            android:text="Số lượng: "
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/quanty1"
            android:layout_below="@id/name_item"
            android:textColor="@color/body"
            style="@style/Body"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/quanty"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/body"
            android:text="Mô tả: "
            android:id="@+id/mota"
            style="@style/Body"
            android:layout_below="@+id/quanty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/Description"
            android:textColor="@color/body"
            android:text="Với nhiều nội dung quan trọng như tích phân, lượng giác, đạo hàm, nội dung chi tiết rõ ràng giúp bạn qua môn dễ dàng hơn"
            android:layout_marginTop="5dp"
            android:layout_below="@id/mota"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/purchase"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_main"
            android:text="Mua ngay" />

        <Button
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_main"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Thêm vào giỏ" />
    </RelativeLayout>


</FrameLayout>