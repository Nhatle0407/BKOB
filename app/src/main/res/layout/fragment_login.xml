<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginFragment">

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        style="@style/Caption"
        android:textColor="@color/main"
        android:layout_alignParentEnd="true"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/AppName"
        android:layout_centerHorizontal="true"
        android:shadowColor="#bfbfbf"
        android:shadowDx="0"
        android:shadowDy="10"
        android:shadowRadius="1"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="@color/header"
        android:layout_alignParentStart="true"
        android:layout_below="@id/app_name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        style="@style/Header"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_login"
        android:layout_marginTop="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="10dp"
        style="@style/Body"
        android:background="@drawable/edittext"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_email"
        android:layout_marginTop="15dp"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingHorizontal="10dp"
        style="@style/Body"
        android:background="@drawable/edittext"/>

    <TextView
        android:id="@+id/tv_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        style="@style/Caption"
        android:textColor="@color/main"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/et_password"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_forgotPassword"
        android:layout_marginTop="20dp"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        style="@style/Button"
        android:textColor="@color/white"
        android:background="@drawable/button_main"/>

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hoặc"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        style="@style/Caption"
        android:textColor="@color/main"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_or"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/im_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_akar_icons_facebook_fill" />

        <ImageView
            android:id="@+id/im_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_akar_icons_google_contained_fill"
            android:layout_toEndOf="@id/im_facebook"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_askSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_dontHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản?"
            style="@style/Caption"
            android:textColor="@color/body"/>

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_dontHaveAccount"
            android:paddingStart="5dp"
            android:text="Đăng ký"
            style="@style/Caption"
            android:textColor="@color/main"/>

    </RelativeLayout>


</RelativeLayout>