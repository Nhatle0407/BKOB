<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_receive"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/im_book_buy"
        android:layout_width="68dp"
        android:layout_height="102dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/giaitich"
        android:contentDescription="TODO" />
    <RelativeLayout
        android:layout_toEndOf="@id/im_book_buy"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_buy"
            style="@style/BoldBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Giải tích 2"
            android:textColor="@color/header" />

        <TextView
            android:id="@+id/date_buy"
            style="@style/Body"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name_buy"
            android:text="20/10/2021" />

        <TextView
            android:id="@+id/price_buy"
            style="@style/BoldBody"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_buy"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/main"
            android:text="20.0000đ" />


    </RelativeLayout>

</RelativeLayout>